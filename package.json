{
  "name": "nodesos",
  "version": "2.1.0",
  "description": "A module to communicate with LifeSOS alarm systems.",
  "repository": {
    "type": "git",
    "url": "https://github.com/bratanon/nodesos.git"
  },
  "license": "MIT",
  "author": "Emil Stjerneman <emil@stjerneman.com>",
  "main": "dist/main.js",
  "module": "dist/module.js",
  "source": "src/index.ts",
  "types": "dist/types.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "parcel build --no-source-maps --no-cache",
    "format:package": "npx sort-package-json",
    "lint": "eslint src",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "prettier": "prettier src --write",
    "test": "jest"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint",
      "npm run prettier"
    ],
    "package.json": "npm run format:package"
  },
  "dependencies": {
    "log4js": "^6.9.1",
    "luxon": "^3.7.1",
    "sprintf-js": "^1.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@parcel/packager-ts": "^2.15.4",
    "@parcel/transformer-typescript-types": "^2.15.4",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.16.15",
    "@types/sprintf-js": "^1.1.4",
    "eslint": "^9.34.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^9.1.7",
    "jest": "^30.1.2",
    "lint-staged": "^16.1.5",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.15.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
